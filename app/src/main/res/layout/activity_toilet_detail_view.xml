<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">
    <ImageView android:layout_width="match_parent" android:layout_height="350dp" android:src="@drawable/search"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"> </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:id="@+id/textViewRestroom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="신촌지구대 개방화장실" android:padding="15dp" android:textSize="30sp" android:textColor="@android:color/black"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/black" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        <TextView android:id="@+id/textViewHours" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="운영시간: 9:00~22:00" android:padding="10dp" android:textSize="20sp" android:textColor="@android:color/black"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/black" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        <TextView android:id="@+id/textViewAddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="주소: 서울특별시 서대문구 성산로 512-39" android:padding="10dp" android:textSize="20sp" android:textColor="@android:color/black"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/black" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        <TextView android:id="@+id/textViewGenderNeutral" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="남녀공용화장실 여부: N" android:padding="10dp" android:textSize="20sp" android:textColor="@android:color/black"/>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/black" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
    </LinearLayout>
</LinearLayout>